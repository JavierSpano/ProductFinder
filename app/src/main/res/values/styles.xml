<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Transitions -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- Colors  -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>


        <!-- Shapes -->
        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.ProductFinder.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.ProductFinder.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">
            @style/ShapeAppearance.ProductFinder.LargeComponent
        </item>

        <!-- Status bar -->
        <item name="android:windowLightStatusBar">false</item>

    </style>

    <style name="Widget.ProductFinder.WhiteButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="iconTint">@android:color/black</item>
    </style>

    <style name="ShapeAppearance.ProductFinder.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.ProductFinder.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.ProductFinder.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CircularDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@drawable/circle_background</item>
    </style>

    <style name="Widget.ProductFinder.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:color">@android:color/black</item>
    </style>

</resources>
